# StrideSync Production Environment Configuration
# Copy this to .env on your production server and fill in the values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=StrideSync
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://your-app.ondigitalocean.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stderr
LOG_LEVEL=error

# ============================================
# DATABASE
# ============================================
# For Digital Ocean Managed Database, use DATABASE_URL
# DATABASE_URL=mysql://user:password@host:port/database?sslmode=require

# Or use individual settings:
DB_CONNECTION=mysql
DB_HOST=your-db-host.db.ondigitalocean.com
DB_PORT=25060
DB_DATABASE=stridesync
DB_USERNAME=doadmin
DB_PASSWORD=your-password

# ============================================
# SESSION & CACHE
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
CACHE_STORE=database
QUEUE_CONNECTION=database

# ============================================
# TELEGRAM BOT
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ============================================
# CLOUDINARY (Image Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=stridesync

# ============================================
# LOCATION SERVICES
# ============================================
NOMINATIM_USER_AGENT="StrideSync/1.0 (your-email@example.com)"
NOMINATIM_SSL_VERIFY=true

# SerpAPI (optional - for enhanced location search)
SERPAPI_API_KEY=
SERPAPI_ENGINE=google_maps

# ============================================
# MAIL (Optional)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"
